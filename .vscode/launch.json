  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to API",
      "type": "node",
      "request": "attach",
      // "port": 3000,
      "address": "localhost",
      "restart": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/lol-pickem-api/dist/*.js"],
      "localRoot": "${workspaceRoot}/lol-pickem-api",
      "remoteRoot": "${workspaceRoot}/lol-pickem-api"
    },
    {
      "name": "Launch APP in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}/lol-pickem-app"
    }
  ]
}
